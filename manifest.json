{
  "manifest_version": 2,

  "name": "Purple Rain",
  "description": "The only window you'll ever need.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "geolocation"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/purplerain.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "background": {
    "scripts": [
      "background.js",
      "js/jquery.js"
    ]
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Purple Rain",
    "default_popup": "options.html"
  },

  "options_page": "options.html"
}
