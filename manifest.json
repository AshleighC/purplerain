{
  "manifest_version": 2,

  "name": "Purple Rain",
  "description": "The only window you'll ever need.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "geolocation",
    "storage",
    "http://api.openweathermap.org/data/2.5/*",
    "https://api.openweathermap.org/data/2.5/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/content.js"
      ],
      "css": [
        "css/style.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "background": {
    "scripts": [
      "js/jquery.js",
      "background.js"
    ]
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "web_accessible_resources": [
    "img/sun.png",
    "img/clouds.png",
    "img/snow.png",
    "img/icon128.png",
    "img/rain.png",
    "img/heavy_rain.png",
    "img/light_rain.png"
  ],

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Purple Rain",
    "default_popup": "popup.html"
  }
}
